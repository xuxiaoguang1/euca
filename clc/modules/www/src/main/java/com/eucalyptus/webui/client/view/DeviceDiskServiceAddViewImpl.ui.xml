<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p1="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:d="urn:import:com.eucalyptus.webui.client.view">

	<ui:style>
		.title {
			font-size: 110%;
			font-weight: bold;
			color: darkblue;
			border-bottom: 1px solid #AAAAAA;
		}
		
		.border {
			border-bottom: 1px solid #AAAAAA;
			border-top: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
		}
		
		.background {
			backgroupd-color: #DDDDDD;
			border-bottom: 2px solid #AAAAAA;
			border-top: 2px solid #AAAAAA;
			border-left: 2px solid #AAAAAA;
			border-right: 2px solid #AAAAAA;
		}

		.textArea {
			resize:none;
		}
		
		.textBoxStyle-readonly {
            background-color:lightgray;
        }
	</ui:style>

	<ui:with field="global"
		type="com.eucalyptus.webui.client.view.GlobalResources" />
		
	<g:DockLayoutPanel width="614px" height="275px">
		<g:center>
			<g:VerticalPanel horizontalAlignment="ALIGN_LEFT" styleName="{style.background}" verticalAlignment="ALIGN_TOP">
				<g:HTMLPanel width="610px">
					<table>
						<colgroup width="30px" />
						<colgroup width="550px" />
						<colgroup width="30px" />
						<tbody>
							<tr height="10px" />
							<tr>
								<td />
								<td>
									<g:HTMLPanel>
										<table>
											<colgroup width="20px" />
											<colgroup width="510px" />
											<colgroup width="20px" />
											<tbody class="{style.title}">
												<tr>
													<td />
													<td>添加硬盘服务：</td>
													<td />
												</tr>
												<tr height="5px">
													<td />
													<td />
													<td />
												</tr>
											</tbody>
										</table>
									</g:HTMLPanel>
								</td>
								<td />
							</tr>
							<tr height="10px" />
						</tbody>
					</table>
				</g:HTMLPanel>
				<g:AbsolutePanel height="228px" width="610px">
					<g:at left="30" top="5">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">所属服务器</g:Anchor>
					</g:at>
					<g:at left="120" top="2">
						<g:TextBox ui:field="serverName" maxLength="50" height="1.4EM" width="32EM" readOnly="true" styleName="{style.textBoxStyle-readonly}"/>
					</g:at>
					<g:at left="30" top="35">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">硬盘名称</g:Anchor>
					</g:at>
					<g:at left="120" top="32">
						<g:TextBox ui:field="diskName" maxLength="50" height="1.4EM" width="32EM" readOnly="true" styleName="{style.textBoxStyle-readonly}"/>
					</g:at>
					<g:at left="30" top="65">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">账户</g:Anchor>
					</g:at>
					<g:at left="120" top="60">
						<g:ListBox ui:field="accountNameList" height="1.8EM" width="12EM"/>
					</g:at>
					<g:at left="335" top="65">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">用户</g:Anchor>
					</g:at>
					<g:at left="405" top="60">
						<g:ListBox ui:field="userNameList" height="1.8EM" width="12EM"/>
					</g:at>
					<g:at left="30" top="95">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">服务描述</g:Anchor>
					</g:at>
					<g:at left="120" top="92">
						<g:TextArea styleName="{style.textArea}" height="2.4EM" width="32EM" ui:field="diskDesc"/>
					</g:at>
					<g:at left="30" top="140">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">开始时间</g:Anchor>
					</g:at>
					<g:at left="120" top="137">
						<d:DeviceDateBox ui:field="dateBegin" height="1.4EM" width="8EM"/>
					</g:at>
					<g:at left="30" top="170">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">结束时间</g:Anchor>
					</g:at>
					<g:at left="120" top="167">
						<d:DeviceDateBox ui:field="dateEnd" height="1.4EM" width="8EM"/>
					</g:at>
					<g:at left="250" top="155">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">剩余</g:Anchor>
					</g:at>
					<g:at left="290" top="152">
						<g:TextBox ui:field="dateLife" height="1.4EM" width="4EM" readOnly="true" styleName="{style.textBoxStyle-readonly}" alignment="RIGHT"/>
					</g:at>
					<g:at left="355" top="155">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">(天)</g:Anchor>
					</g:at>
					<g:at left="395" top="140">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">容量(MB)</g:Anchor>
					</g:at>
					<g:at left="470" top="135">
						<g:LongBox ui:field="diskUsed" maxLength="50" height="1.4EM" width="7EM" alignment="RIGHT"/>
					</g:at>
					<g:at left="400" top="180" style="font-size:90%;">
						<g:Anchor styleName="{global.buttonCss.button}"
							horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonOK">确&nbsp;定
						</g:Anchor>
					</g:at>
					<g:at left="480" top="180" style="font-size:90%;">
						<g:Anchor styleName="{global.buttonCss.button}"
							horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonCancel">取&nbsp;消
						</g:Anchor>
					</g:at>
				</g:AbsolutePanel>
			</g:VerticalPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 
