<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

	<ui:style>
		.title {
			font-size: 110%;
			font-weight: bold;
			color: darkblue;
			border-bottom: 1px solid #AAAAAA;
		}
		
		.border {
			border-bottom: 1px solid #AAAAAA;
			border-top: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
		}
		
		.background {
			backgroupd-color: #DDDDDD;
			border-bottom: 2px solid #AAAAAA;
			border-top: 2px solid #AAAAAA;
			border-left: 2px solid #AAAAAA;
			border-right: 2px solid #AAAAAA;
		}
		
		.content0 {
			font-size: 100%;
			border-bottom: 1px dashed #AAAAAA;
		}
		
		.content1 {
			font-size: 100%;
		}
		
		.content2 {
			font-size: 100%;
			border-top: 1px dotted #AAAAAA;
		}
	</ui:style>

	<ui:with field="global"
		type="com.eucalyptus.webui.client.view.GlobalResources" />

	<g:VerticalPanel horizontalAlignment="ALIGN_LEFT"
		styleName="{style.background}"
		verticalAlignment="ALIGN_TOP">
		<g:HTMLPanel width="570px">
			<table>
				<colgroup width="30px" />
				<colgroup width="510px" />
				<colgroup width="30px" />
				<tbody>
					<tr height="10px" />
					<tr>
						<td />
						<td>
							<g:HTMLPanel width="545px">
								<table>
									<colgroup width="20px" />
									<colgroup width="500px" />
									<colgroup width="20px" />
									<tbody class="{style.title}">
										<tr>
											<td />
											<td>添加设备：</td>
											<td />
										</tr>
										<tr height="5px">
											<td />
											<td />
											<td />
										</tr>
									</tbody>
								</table>
							</g:HTMLPanel>
						</td>
						<td />
					</tr>
					<tr height="10px" />
				</tbody>
			</table>
		</g:HTMLPanel>
		<g:AbsolutePanel height="375px" width="570px">
			<g:at left="35" top="5">
				<g:HTMLPanel>
					<table>
						<tbody class="{style.content1}">
							<tr>
								<td>
									<g:AbsolutePanel height="370px" width="500px">
										<g:at left="100" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">公有</g:Anchor>
										</g:at>
										<g:at left="350" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">私有</g:Anchor>
										</g:at>
										<g:at left="10" top="22">
											<g:TextArea width="220px" height="280px" ui:field="publicArea"/>
										</g:at>
										<g:at left="260" top="22">
											<g:TextArea width="220px" height="280px" ui:field="privateArea"/>
										</g:at>
										<g:at left="297" top="324">
											<g:HTMLPanel>
					<table>
						<tbody class="{style.content2}">
						<tr height="5px"><td/></tr>
							<tr>
								<td>
									<g:AbsolutePanel height="35px" width="190px">
										<g:at left="20" top="0">
											<g:Anchor styleName="{global.buttonCss.button}"
												horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonOK">确&nbsp;定</g:Anchor>
										</g:at>
										<g:at left="100" top="0">
											<g:Anchor styleName="{global.buttonCss.button}"
												horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonCancel">取&nbsp;消</g:Anchor>
										</g:at>
									</g:AbsolutePanel>
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
										</g:at>
									</g:AbsolutePanel>
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
			</g:at>
		</g:AbsolutePanel>
	</g:VerticalPanel>

</ui:UiBinder> 
