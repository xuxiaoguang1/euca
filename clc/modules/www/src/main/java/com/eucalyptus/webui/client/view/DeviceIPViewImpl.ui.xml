<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:euca="urn:import:com.eucalyptus.webui.client.view">

	<ui:style>
		.toolbar {
			width: 99%;
		}
		
		.top {
			font-size: 120%;
		}
		
		.checkbox {
			font-size: 90%;
		}
		
		.topContent {
			color: gray;
			font-size: 95%;
			border-top: 1px solid #AAAAAA;
			border-bottom: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
			margin-left: auto;
			margin-right: auto;
		}
		
		.topLinks {
			cursor: pointer;
			cursor: hand;
		}
		
		.bottom {
			font-size: 80%;
			border-top: 1px solid #AAAAAA;
		}
		
		.bottomContent {
			font-size: 90%;
		}
	</ui:style>

	<ui:with field="global"
		type="com.eucalyptus.webui.client.view.GlobalResources" />

	<g:DockLayoutPanel unit="EM">
		<g:north size="12">
			<g:DockLayoutPanel unit="EM">
				<g:north size="2.5">
					<g:DockLayoutPanel unit="EM">
						<g:west size="2">
							<g:HTMLPanel>
								<table />
							</g:HTMLPanel>
						</g:west>
						<g:center>
							<g:AbsolutePanel width="1000px" height="40px">
								<g:at left="30" top="10">
									<g:HTMLPanel>
										<table>
											<tr class="{style.top}">
												<td>IP总资源</td>
											</tr>
										</table>
									</g:HTMLPanel>
								</g:at>
								<g:at left="160" top="10">
									<g:HTMLPanel>
										<table>
											<colgroup width="58px" />
											<colgroup width="58px" />
											<colgroup width="58px" />
											<tbody class="{style.topContent}">
												<tr>
													<td>
														<g:RadioButton name="queryType" text="全部"
															checked="true" ui:field="queryTypeAll" />
													</td>
													<td>
														<g:RadioButton name="queryType" text="公有"
															ui:field="queryTypePublic" />
													</td>
													<td>
														<g:RadioButton name="queryType" text="私有"
															ui:field="queryTypePrivate" />
													</td>
												</tr>
											</tbody>
										</table>
									</g:HTMLPanel>
								</g:at>
							</g:AbsolutePanel>
						</g:center>
					</g:DockLayoutPanel>
				</g:north>
				<g:center>
					<g:DockLayoutPanel unit="EM">
						<g:west size="3">
							<g:HTMLPanel>
								<table />
							</g:HTMLPanel>
						</g:west>
						<g:center>
							<g:DockLayoutPanel unit="EM">
								<g:south size="6">
									<g:HTMLPanel>
										<table width="800px">
											<colgroup width="3%" />
											<colgroup width="27%" />
											<colgroup width="20%" />
											<colgroup width="3%" />
											<colgroup width="27%" />
											<colgroup width="20%" />
											<tbody class="{style.topContent}">
												<tr>
													<td>&nbsp;</td>
													<td>
														<div height="10px">&nbsp;</div>
														<div>
															<g:Anchor styleName="{style.topLinks}" ui:field="labelAll">全部IP数量：0</g:Anchor>
														</div>
														<div height="10px">&nbsp;</div>
														<div>
															<g:Anchor styleName="{style.topLinks}" ui:field="labelReserved">预留IP数量：0</g:Anchor>
														</div>
														<div height="10px">&nbsp;</div>
													</td>
													<td>&nbsp;</td>
													<td>&nbsp;</td>
													<td>
														<div height="10px">&nbsp;</div>
														<div>
															<g:Anchor styleName="{style.topLinks}" ui:field="labelInuse">使用中IP数量：0</g:Anchor>
														</div>
														<div height="10px">&nbsp;</div>
														<div>
															<g:Anchor styleName="{style.topLinks}" ui:field="labelStop">未使用IP数量：0</g:Anchor>
														</div>
														<div height="10px">&nbsp;</div>
													</td>
													<td>&nbsp;</td>
												</tr>
											</tbody>
										</table>
									</g:HTMLPanel>
								</g:south>
							</g:DockLayoutPanel>
						</g:center>
					</g:DockLayoutPanel>
				</g:center>
				<g:south size="3.5">
					<g:AbsolutePanel width="1000px" height="56px">
						<g:at left="30" top="10">
							<g:DeckPanel height="36px" width="940px" ui:field="deckPanel">
								<g:HTMLPanel height="36px" width="900px"
									styleName="border-top:1px solid #AAAAAA;">
									<table class="{style.bottom}">
										<tbody>
											<tr height="4px">
												<td width="10px" />
												<td width="80px" />
												<td width="80px" />
												<td width="40px" />
												<td width="80px" />
												<td width="80px" />
												<td width="80px" />
												<td width="40px" />
												<td width="110px" />
												<td width="220px" />
											</tr>
											<tr>
												<td />
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px" ui:field="buttonAddDevice">
														添加设备
													</g:Anchor>
												</td>
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px"
														ui:field="buttonDeleteDevice">
														删除设备
													</g:Anchor>
												</td>
												<td />
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px"
														ui:field="buttonAddService">
														添加服务
													</g:Anchor>
												</td>
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px"
														ui:field="buttonDeleteService">
														删除服务
													</g:Anchor>
												</td>
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px"
														ui:field="buttonModifyService">
														变更服务
													</g:Anchor>
												</td>
												<td />
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px" ui:field="clearSelection">
														清空选择
													</g:Anchor>
												</td>
												<td />
											</tr>
										</tbody>
									</table>
								</g:HTMLPanel>
								<g:HTMLPanel height="36px" width="900px"
									styleName="border-top:1px solid #AAAAAA;">
									<table class="{style.bottom}">
										<tbody>
											<tr height="4px">
												<td width="10px" />
												<td width="80px" />
												<td width="730px" />
											</tr>
											<tr>
												<td />
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px"
														ui:field="mirrorAddServiceBack">
														返&nbsp;&nbsp;回
													</g:Anchor>
												</td>
											</tr>
										</tbody>
									</table>
								</g:HTMLPanel>
								<g:HTMLPanel height="36px" width="900px"
									styleName="border-top:1px solid #AAAAAA;">
									<table class="{style.bottom}">
										<tbody>
											<tr height="4px">
												<td width="10px" />
												<td width="80px" />
												<td width="730px" />
											</tr>
											<tr>
												<td />
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px"
														ui:field="mirrorModifyServiceBack">
														返&nbsp;&nbsp;回
													</g:Anchor>
												</td>
											</tr>
										</tbody>
									</table>
								</g:HTMLPanel>
								<g:HTMLPanel height="36px" width="900px"
									styleName="border-top:1px solid #AAAAAA;">
									<table class="{style.bottom}">
										<tbody>
											<tr height="4px">
												<td width="10px" />
												<td width="80px" />
												<td width="40px" />
												<td width="80px" />
												<td width="610px" />
											</tr>
											<tr>
												<td />
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px"
														ui:field="mirrorDeleteServiceDeleteAll">
														删除全部
													</g:Anchor>
												</td>
												<td />
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px"
														ui:field="mirrorDeleteServiceBack">
														返&nbsp;&nbsp;回
													</g:Anchor>
												</td>
											</tr>
										</tbody>
									</table>
								</g:HTMLPanel>
								<g:HTMLPanel height="36px" width="900px"
									styleName="border-top:1px solid #AAAAAA;">
									<table class="{style.bottom}">
										<tbody>
											<tr height="4px">
												<td width="10px" />
												<td width="80px" />
												<td width="40px" />
												<td width="80px" />
												<td width="610px" />
											</tr>
											<tr>
												<td />
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px"
														ui:field="mirrorDeleteDeviceDeleteAll">
														删除全部
													</g:Anchor>
												</td>
												<td />
												<td>
													<g:Anchor styleName="{global.buttonCss.button}"
														horizontalAlignment="ALIGN_CENTER" width="64px"
														ui:field="mirrorDeleteDeviceBack">
														返&nbsp;&nbsp;回
													</g:Anchor>
												</td>
											</tr>
										</tbody>
									</table>
								</g:HTMLPanel>
							</g:DeckPanel>
						</g:at>
					</g:AbsolutePanel>
				</g:south>
			</g:DockLayoutPanel>
		</g:north>
		<g:center>
			<g:LayoutPanel ui:field="resultPanel" />
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 