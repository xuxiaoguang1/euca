<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

	<ui:style>
		.title {
			font-size: 110%;
			font-weight: bold;
			color: darkblue;
			border-bottom: 1px solid #AAAAAA;
		}
		
		.border {
			border-bottom: 1px solid #AAAAAA;
			border-top: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
		}
		
		.background {
			backgroupd-color: #DDDDDD;
			border-bottom: 2px solid #AAAAAA;
			border-top: 2px solid #AAAAAA;
			border-left: 2px solid #AAAAAA;
			border-right: 2px solid #AAAAAA;
		}
	</ui:style>

	<ui:with field="global"
		type="com.eucalyptus.webui.client.view.GlobalResources" />

	<g:VerticalPanel horizontalAlignment="ALIGN_CENTER"
		width="320px" height="270px" styleName="{style.background}">
		<g:HTMLPanel width="320px">
			<table>
				<colgroup width="30px" />
				<colgroup width="260px" />
				<colgroup width="30px" />
				<tbody>
					<tr height="10px" />
					<tr>
						<td />
						<td>
							<g:HTMLPanel>
								<table>
									<colgroup width="20px" />
									<colgroup width="220px" />
									<colgroup width="20px" />
									<tbody class="{style.title}">
										<tr>
											<td />
											<td>操作服务器：</td>
											<td />
										</tr>
										<tr height="5px">
											<td />
											<td />
											<td />
										</tr>
									</tbody>
								</table>
							</g:HTMLPanel>
						</td>
						<td />
					</tr>
					<tr height="10px" />
				</tbody>
			</table>
		</g:HTMLPanel>
		<g:AbsolutePanel height="100px" width="320px">
			<g:at left="20" top="10">
				<g:Button ui:field="buttonStart" text="开机" height="30px"
					width="80px" />
			</g:at>
			<g:at left="120" top="10">
				<g:Button ui:field="buttonStop" text="关机" height="30px"
					width="80px" />
			</g:at>
			<g:at left="220" top="10">
				<g:Button ui:field="buttonError" text="故障" height="30px"
					width="80px" />
			</g:at>
			<g:at left="20" top="50">
				<g:Button ui:field="buttonConnect" text="连接" height="30px"
					width="80px" />
			</g:at>
			<g:at left="120" top="50">
				<g:Button ui:field="buttonSecret" text="密钥管理" height="30px"
					width="80px" />
			</g:at>
			<g:at left="220" top="50">
				<g:Button ui:field="buttonCancel" text="取消" height="30px"
					width="80px" />
			</g:at>
		</g:AbsolutePanel>
	</g:VerticalPanel>

</ui:UiBinder> 
