<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:euca="urn:import:com.eucalyptus.webui.client.view">
    
    <ui:style>
        .toolbar {
            width:99%;
        }
    </ui:style>
    
    <ui:with field="global" type="com.eucalyptus.webui.client.view.GlobalResources"/>
    
    <g:DockLayoutPanel unit="PX">
    	<g:north size="56.0">
    	    <g:HTMLPanel addStyleNames="{style.toolbar}">
                <table>
                    <colgroup width="1px"/>
                    <colgroup width="20px"/>
                    <colgroup width="1px"/>
                    <colgroup width="1px"/>
                    <colgroup width="20px"/>                    
                    <colgroup width="1px"/>
                    <colgroup width="1px"/>
                    <colgroup width="1px"/>
                    <colgroup width="20px"/>                    
                    <colgroup width="1px"/>
                    <colgroup width="1px"/>                    
                    <tbody>
                        <tr>
                        	<td>
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="addGroupButton">
                                    <span class="{global.buttonCss.plus} {global.buttonCss.icon}"/>增加组
                                </g:Anchor>
                            </td>
                            <td>
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="modifyGroupButton">
                                    <span class="{global.buttonCss.plus} {global.buttonCss.icon}"/>编辑组
                                </g:Anchor>
                            </td>
                            <td>
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="removeGroupButton">
                                    <span class="{global.buttonCss.minus} {global.buttonCss.icon}"/>删除组
                                </g:Anchor>
                            </td>
                            <td>&nbsp;</td>
                             <td>
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="showGroupDetailsButton">
                                    <span class="{global.buttonCss.minus} {global.buttonCss.icon}"/>查看组
                                </g:Anchor>
                            </td>
                            <td>&nbsp;</td>
                            <td>                             
                                <g:Anchor styleName="{global.buttonCss.positive} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.left}" ui:field="resumeGroupButton">
                                    <span class="{global.buttonCss.check} {global.buttonCss.icon}"/>恢复
                                </g:Anchor>                            
                            </td>
                            <td>                             
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.right}" ui:field="pauseGroupButton">
                                    <span class="{global.buttonCss.x} {global.buttonCss.icon}"/>暂停
                                </g:Anchor>                            
                            </td>  
                            <td>                             
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.right}" ui:field="banGroupButton">
                                    <span class="{global.buttonCss.x} {global.buttonCss.icon}"/>禁止
                                </g:Anchor>                            
                            </td>                            
                        </tr>
                    </tbody>
                </table>
            </g:HTMLPanel>
    	</g:north>
        <g:center>
            <g:LayoutPanel ui:field="tablePanel"/>
        </g:center>
    </g:DockLayoutPanel>
    
</ui:UiBinder> 