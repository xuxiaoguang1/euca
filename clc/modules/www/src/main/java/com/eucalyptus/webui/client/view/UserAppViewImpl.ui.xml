<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
	<ui:style>
		.toolbar {
			width: 99%;
		}
		
		.top {
			font-size: 120%;
		}
		
		.topContent {
			color: gray;
			font-size: 95%;
			border-top: 1px solid #AAAAAA;
			border-bottom: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
			margin-left: auto;
			margin-right: auto;
		}
		
		.topLinks {
			cursor: pointer;
			cursor: hand;
		}
		
		.bottom {
			font-size: 80%;
			border-top: 1px solid #AAAAAA;
		}
		
		.bottomContent {
			font-size: 90%;
		}
	</ui:style>
    
    <ui:with field="global" type="com.eucalyptus.webui.client.view.GlobalResources"/>
    
	<g:DockLayoutPanel unit="PX">
	    <g:north size="100.0">
    		<g:HTMLPanel addStyleNames="{style.toolbar}">
					<table width ="100%" >
						<colgroup width="1px"/>
	                    <colgroup width="20px"/>
	                    <colgroup width="1px"/>
	                    <colgroup width="1px"/>
	                    <colgroup width="20px"/>                    
	                    <colgroup width="1px"/>
	                    <colgroup width="1px"/>
	                    <colgroup width="1px"/>
	                    <colgroup width="20px"/>                    
	                    <colgroup width="1px"/>
	                    <colgroup width="1px"/>
						<tbody>
							<tr>
								<td colspan="5">&nbsp;</td>
							</tr>
							<tr>
								<td width="10%">&nbsp;</td>
								<td width="15%">
									<g:Anchor styleName="{style.topLinks}" ui:field="labelAll" height="35px">全部申请数量：0</g:Anchor>
								</td>
								<td width="10%">&nbsp;</td>
								<td width="15%">
									<g:Anchor styleName="{style.topLinks}" ui:field="labelToSolve" height="35px">待解决申请数量：0</g:Anchor>
								</td>
								<td width="50%">&nbsp;</td>
							</tr>
							<tr>
								<td width="10%">&nbsp;</td>
								<td width="15%">
									<g:Anchor styleName="{style.topLinks}" ui:field="labelSolved" height="35px">已处理申请数量：0</g:Anchor>
								</td>
								<td width="10%">&nbsp;</td>
								<td width="15%">
									<g:Anchor styleName="{style.topLinks}" ui:field="labelSolving" height="35px"><font color="blue">正处理申请数量：0</font>></g:Anchor>
								</td>
								<td width="50%">&nbsp;</td>
							</tr>
							<tr>
								<td colspan="5">&nbsp;</td>
							</tr>
							<tr>
	                           <td clolspan="5">
		                           <table width="30%">
		                           		<tr>
				                           <td>                             
				                               <g:Anchor styleName="{global.buttonCss.positive} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.left}" ui:field="buttonApproveUserApp">
				                                   <span class="{global.buttonCss.check} {global.buttonCss.icon}"/>批准
				                               </g:Anchor>                            
				                           </td>
				                           <td>                             
				                               <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.right}" ui:field="buttonRejectUserApp">
				                                   <span class="{global.buttonCss.x} {global.buttonCss.icon}"/>拒绝
				                               </g:Anchor>                            
				                           </td>
				                           <td>&nbsp;</td>
				                           <td>
				                               <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="buttonOnCreateUserApp">
				                                   <span class="{global.buttonCss.plus} {global.buttonCss.icon}"/>申请
				                               </g:Anchor>
				                           </td>   
				                            <td>
				                               <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="buttonOnDelUserApp">
				                                   <span class="{global.buttonCss.minus} {global.buttonCss.icon}"/>删除
				                               </g:Anchor>
				                           </td>
				                          </tr>
				                   </table>
			                   </td>
	                       </tr>
						</tbody>
					</table>
			</g:HTMLPanel>
    	</g:north>
    	<g:center>
            <g:LayoutPanel ui:field="tablePanel" height="">
            	<g:layer left="-51px" width="103px" top="122px" height="25px">
            		<g:Button/>
            	</g:layer>
            </g:LayoutPanel>
        </g:center>

    </g:DockLayoutPanel>
    
</ui:UiBinder> 