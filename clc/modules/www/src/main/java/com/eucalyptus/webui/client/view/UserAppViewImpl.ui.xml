<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
	<ui:style>
		.toolbar {
			width: 99%;
		}
		
		.top {
			font-size: 120%;
		}
		
		.topContent {
			color: gray;
			font-size: 95%;
			border-top: 1px solid #AAAAAA;
			border-bottom: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
			margin-left: auto;
			margin-right: auto;
		}
		
		.topLinks {
			cursor: pointer;
			cursor: hand;
		}
		
		.bottom {
			font-size: 80%;
			border-top: 1px solid #AAAAAA;
		}
		
		.bottomContent {
			font-size: 90%;
		}
	</ui:style>
    
    <ui:with field="global" type="com.eucalyptus.webui.client.view.GlobalResources"/>
    
	<g:VerticalPanel width="1000" height="300" horizontalAlignment="ALIGN_LEFT">
	    <g:Cell>
			<g:HorizontalPanel>
				<g:Cell width="40px">
					<g:AbsolutePanel />
				</g:Cell>
				<g:HTMLPanel>
					<table width="800px">
						<colgroup width="3%" />
						<colgroup width="27%" />
						<colgroup width="20%" />
						<colgroup width="3%" />
						<colgroup width="27%" />
						<colgroup width="20%" />
						<tbody class="{style.topContent}">
							<tr>
								<td>&nbsp;</td>
								<td>
									<div height="10px">&nbsp;</div>
									<div>
										<g:Anchor styleName="{style.topLinks}" ui:field="labelAll">总申请数量：0</g:Anchor>
									</div>
									<div height="10px">&nbsp;</div>
									<div>
										<g:Anchor styleName="{style.topLinks}" ui:field="labelToSolve">待解决申请数量：0</g:Anchor>
									</div>
									<div height="10px">&nbsp;</div>
								</td>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
								<td>
									<div height="10px">&nbsp;</div>
									<div>
										<g:Anchor styleName="{style.topLinks}" ui:field="labelSolved">已处理申请数量：0</g:Anchor>
									</div>
									<div height="10px">&nbsp;</div>
									<div>
										<g:Anchor styleName="{style.topLinks}" ui:field="labelSolving">正处理申请数量：0</g:Anchor>
									</div>
									<div height="10px">&nbsp;</div>
								</td>
								<td>&nbsp;</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
			</g:HorizontalPanel>
		</g:Cell>
		
   		<g:HTMLPanel height="36px" width="900px" styleName="border-top:1px solid #AAAAAA;">
               <table>
                   <colgroup width="1px"/>
                   <colgroup width="20px"/>
                   <colgroup width="1px"/>
                   <colgroup width="1px"/>
                   <colgroup width="20px"/>                    
                   <colgroup width="1px"/>
                   <colgroup width="1px"/>
                   <colgroup width="1px"/>
                   <colgroup width="20px"/>                    
                   <colgroup width="1px"/>
                   <colgroup width="1px"/>                    
                   <tbody>
                       <tr>
                           <td>                             
                               <g:Anchor styleName="{global.buttonCss.positive} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.left}" ui:field="buttonApproveUserApp">
                                   <span class="{global.buttonCss.check} {global.buttonCss.icon}"/>批准
                               </g:Anchor>                            
                           </td>
                           <td>                             
                               <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.right}" ui:field="buttonRejectUserApp">
                                   <span class="{global.buttonCss.x} {global.buttonCss.icon}"/>拒绝
                               </g:Anchor>                            
                           </td>
                           <td>&nbsp;</td>
                           <td>
                               <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="buttonOnCreateUserApp">
                                   <span class="{global.buttonCss.plus} {global.buttonCss.icon}"/>申请
                               </g:Anchor>
                           </td>   
                            <td>
                               <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="buttonOnDelUserApp">
                                   <span class="{global.buttonCss.minus} {global.buttonCss.icon}"/>删除
                               </g:Anchor>
                           </td>
                                                
                       </tr>
                   </tbody>
               </table>
        </g:HTMLPanel>
            
        <g:LayoutPanel ui:field="tablePanel" height="320px">
           	<g:layer left="-51px" width="103px" top="122px" height="25px">
           		<g:Button/>
           	</g:layer>
        </g:LayoutPanel>

    </g:VerticalPanel>
    
</ui:UiBinder> 