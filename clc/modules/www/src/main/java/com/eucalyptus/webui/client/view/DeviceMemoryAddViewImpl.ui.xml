<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

	<ui:style>
		.title {
			font-size: 110%;
			font-weight: bold;
			color: darkblue;
			border-bottom: 1px solid #AAAAAA;
		}
		
		.border {
			border-bottom: 1px solid #AAAAAA;
			border-top: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
		}
		
		.background {
			backgroupd-color: #DDDDDD;
			border-bottom: 2px solid #AAAAAA;
			border-top: 2px solid #AAAAAA;
			border-left: 2px solid #AAAAAA;
			border-right: 2px solid #AAAAAA;
		}

		.textArea {
			resize:none;
		}
	</ui:style>

	<ui:with field="global"
		type="com.eucalyptus.webui.client.view.GlobalResources" />
		
	<g:DockLayoutPanel width="614px" height="305px">
		<g:center>
			<g:VerticalPanel horizontalAlignment="ALIGN_LEFT" styleName="{style.background}" verticalAlignment="ALIGN_TOP">
				<g:HTMLPanel width="610px">
					<table>
						<colgroup width="30px" />
						<colgroup width="550px" />
						<colgroup width="30px" />
						<tbody>
							<tr height="10px" />
							<tr>
								<td />
								<td>
									<g:HTMLPanel>
										<table>
											<colgroup width="20px" />
											<colgroup width="510px" />
											<colgroup width="20px" />
											<tbody class="{style.title}">
												<tr>
													<td />
													<td>添加内存：</td>
													<td />
												</tr>
												<tr height="5px">
													<td />
													<td />
													<td />
												</tr>
											</tbody>
										</table>
									</g:HTMLPanel>
								</td>
								<td />
							</tr>
							<tr height="10px" />
						</tbody>
					</table>
				</g:HTMLPanel>
				<g:AbsolutePanel height="258px" width="610px">
					<g:at left="30" top="5">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">所属区域</g:Anchor>
					</g:at>
					<g:at left="120" top="2">
						<g:ListBox ui:field="areaNameList" height="1.8EM" width="32.5EM"/>
					</g:at>
					<g:at left="30" top="35">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">所属机房</g:Anchor>
					</g:at>
					<g:at left="120" top="32">
						<g:ListBox ui:field="roomNameList" height="1.8EM" width="32.5EM"/>
					</g:at>
					<g:at left="30" top="65">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">所属机柜</g:Anchor>
					</g:at>
					<g:at left="120" top="62">
						<g:ListBox ui:field="cabinetNameList" height="1.8EM" width="32.5EM"/>
					</g:at>
					<g:at left="30" top="95">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">所属服务器</g:Anchor>
					</g:at>
					<g:at left="120" top="92">
						<g:ListBox ui:field="serverNameList" height="1.8EM" width="32.5EM"/>
					</g:at>
					<g:at left="30" top="125">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">内存名称</g:Anchor>
					</g:at>
					<g:at left="120" top="122">
						<g:TextBox ui:field="memName" maxLength="50" height="1.4EM" width="32EM"/>
					</g:at>
					<g:at left="30" top="155">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">内存描述</g:Anchor>
					</g:at>
					<g:at left="120" top="152">
						<g:TextArea styleName="{style.textArea}" height="2.4EM" width="32EM" ui:field="memDesc"/>
					</g:at>
					<g:at left="30" top="200">
						<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">容量(MB)</g:Anchor>
					</g:at>
					<g:at left="120" top="197">
						<g:LongBox ui:field="memSize" maxLength="50" height="1.4EM" width="14EM" alignment="RIGHT"/>
					</g:at>
					<g:at left="400" top="210" style="font-size:90%;">
						<g:Anchor styleName="{global.buttonCss.button}"
							horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonOK">确&nbsp;定
						</g:Anchor>
					</g:at>
					<g:at left="480" top="210" style="font-size:90%;">
						<g:Anchor styleName="{global.buttonCss.button}"
							horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonCancel">取&nbsp;消
						</g:Anchor>
					</g:at>
				</g:AbsolutePanel>
			</g:VerticalPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 
