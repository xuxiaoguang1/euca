<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:euca="urn:import:com.eucalyptus.webui.client.view">
    
    <ui:style>
        .toolbar {
            width:99%;
        }
    </ui:style>
    
    <ui:with field="global" type="com.eucalyptus.webui.client.view.GlobalResources"/>
    
    <g:DockLayoutPanel unit="PX">
    	<g:north size="41.0">
    		<g:HTMLPanel addStyleNames="{style.toolbar}">
                <table>
                    <colgroup width="1px"/>
                    <colgroup width="20px"/>
                    <colgroup width="1px"/>
                    <colgroup width="1px"/>
                    <colgroup width="20px"/>                    
                    <colgroup width="1px"/>
                    <colgroup width="1px"/>
                    <colgroup width="1px"/>
                    <colgroup width="20px"/>                    
                    <colgroup width="1px"/>
                    <colgroup width="1px"/>                    
                    <tbody>
                        <tr>
                        	<td>
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="buttonOnAddUser">
                                    <span class="{global.buttonCss.plus} {global.buttonCss.icon}"/>增加用户
                                </g:Anchor>
                            </td>
                            <td>
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small}" ui:field="buttonOnDelUser">
                                    <span class="{global.buttonCss.minus} {global.buttonCss.icon}"/>删除用户
                                </g:Anchor>
                            </td>
                            <td>&nbsp;</td>
                            <td>
                                <g:Anchor styleName="{global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.left}" ui:field="buttonAddToGroup">
                                    <span class="{global.buttonCss.group} {global.buttonCss.icon}"/>添加到组
                                </g:Anchor>                            
                            </td>
                            <td>
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.right}" ui:field="buttonDelFromGroup">
                                    <span class="{global.buttonCss.group} {global.buttonCss.icon}"/>从组删除
                                </g:Anchor>                            
                            </td>                            
                            <td>&nbsp;</td>                            
                            <td>
                                <g:Anchor styleName="{global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.left}" ui:field="addPolicyButton">
                                    <span class="{global.buttonCss.lock} {global.buttonCss.icon}"/>增加策略
                                </g:Anchor>
                            </td>
                            <td>
                                <g:Anchor styleName="{global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.middle}" ui:field="addKeyButton">
                                    <span class="{global.buttonCss.key} {global.buttonCss.icon}"/>增加密钥
                                </g:Anchor>
                            </td>
                            <td>
                                <g:Anchor styleName="{global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.middle}" ui:field="addCertButton">
                                    <span class="{global.buttonCss.key} {global.buttonCss.icon}"/>增加证书
                                </g:Anchor>
                            </td>
                            <td>&nbsp;</td>
                            <td>                             
                                <g:Anchor styleName="{global.buttonCss.positive} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.left}" ui:field="buttonResumeUser">
                                    <span class="{global.buttonCss.check} {global.buttonCss.icon}"/>恢复
                                </g:Anchor>                            
                            </td>
                            <td>                             
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.right}" ui:field="buttonPauseUser">
                                    <span class="{global.buttonCss.x} {global.buttonCss.icon}"/>暂停
                                </g:Anchor>                            
                            </td>  
                            <td>                             
                                <g:Anchor styleName="{global.buttonCss.negative} {global.buttonCss.button} {global.buttonCss.small} {global.buttonCss.right}" ui:field="buttonBanUser">
                                    <span class="{global.buttonCss.x} {global.buttonCss.icon}"/>禁止
                                </g:Anchor>                            
                            </td>                            
                        </tr>
                    </tbody>
                </table>
            </g:HTMLPanel>
    	</g:north>
        <g:center>
            <g:LayoutPanel ui:field="tablePanel" height="">
            	<g:layer left="-51px" width="103px" top="122px" height="25px">
            		<g:Button/>
            	</g:layer>
            </g:LayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
    
</ui:UiBinder> 