<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

	<ui:style>
		.title {
			font-size: 110%;
			font-weight: bold;
			color: darkblue;
			border-bottom: 1px solid #AAAAAA;
		}
		
		.border {
			border-bottom: 1px solid #AAAAAA;
			border-top: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
		}
		
		.background {
			backgroupd-color: #DDDDDD;
			border-bottom: 2px solid #AAAAAA;
			border-top: 2px solid #AAAAAA;
			border-left: 2px solid #AAAAAA;
			border-right: 2px solid #AAAAAA;
		}
		
		.content0 {
			font-size: 100%;
			border-bottom: 1px dashed #AAAAAA;
		}
		
		.content1 {
			font-size: 100%;
		}
		
		.content2 {
			font-size: 100%;
			border-top: 1px dotted #AAAAAA;
		}
	</ui:style>

	<ui:with field="global"
		type="com.eucalyptus.webui.client.view.GlobalResources" />

	<g:VerticalPanel horizontalAlignment="ALIGN_LEFT"
		styleName="{style.background}" verticalAlignment="ALIGN_TOP">
		<g:HTMLPanel width="800px">
			<table>
				<colgroup width="30px" />
				<colgroup width="740px" />
				<colgroup width="30px" />
				<tbody>
					<tr height="10px" />
					<tr>
						<td />
						<td>
							<g:HTMLPanel>
								<table>
									<colgroup width="20px" />
									<colgroup width="700px" />
									<colgroup width="20px" />
									<tbody class="{style.title}">
										<tr>
											<td />
											<td>添加设备：</td>
											<td />
										</tr>
										<tr height="5px">
											<td />
											<td />
											<td />
										</tr>
									</tbody>
								</table>
							</g:HTMLPanel>
						</td>
						<td />
					</tr>
					<tr height="10px" />
				</tbody>
			</table>
		</g:HTMLPanel>
		<g:AbsolutePanel height="140px" width="800px">
			<g:at left="35" top="0">
				<g:HTMLPanel>
					<table>
						<tbody class="{style.content0}">
							<tr>
								<td>
									<g:AbsolutePanel height="26px" width="600px">
										<g:at left="10" top="2">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">标识符</g:Anchor>
										</g:at>
										<g:at left="70" top="0">
											<g:TextBox ui:field="serverMark" maxLength="40" width="100px" />
										</g:at>
										<g:at left="220" top="2">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">名称</g:Anchor>
										</g:at>
										<g:at left="270" top="0">
											<g:TextBox ui:field="serverName" maxLength="40" width="100px" />
										</g:at>
									</g:AbsolutePanel>
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
			</g:at>
			<g:at left="35" top="35">
				<g:HTMLPanel>
					<table>
						<tbody class="{style.content1}">
							<tr>
								<td>
									<g:AbsolutePanel height="100px" width="700px">
										<g:at left="10" top="5">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">所属区域</g:Anchor>
										</g:at>
										<g:at left="100" top="2">
											<g:ListBox ui:field="areaNameList" height="1.8EM"
												width="10.5EM" />
										</g:at>
										<g:at left="10" top="35">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">所属机房</g:Anchor>
										</g:at>
										<g:at left="100" top="32">
											<g:ListBox ui:field="roomNameList" height="1.8EM"
												width="10.5EM" />
										</g:at>
										<g:at left="10" top="65">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="140px">所属机柜</g:Anchor>
										</g:at>
										<g:at left="100" top="62">
											<g:ListBox ui:field="cabinetNameList" height="1.8EM"
												width="10.5EM" />
										</g:at>
		
										<g:at left="300" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">配置</g:Anchor>
										</g:at>
										<g:at left="260" top="20">
											<g:TextBox ui:field="serverConf" maxLength="40"
												width="119px" />
										</g:at>
										<g:at left="300" top="45">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">IP地址</g:Anchor>
										</g:at>
										<g:at left="260" top="65">
											<g:TextBox ui:field="serverIP" maxLength="40"
												width="119px" />
										</g:at>
										<g:at left="450" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">带宽(KB)</g:Anchor>
										</g:at>
										<g:at left="415" top="20">
											<g:IntegerBox ui:field="serverBW" maxLength="40"
												width="119px" />
										</g:at>
										<g:at left="590" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">状态</g:Anchor>
										</g:at>
										<g:at left="565" top="20">
											<g:ListBox ui:field="serverState" width="120px" />
										</g:at>
									</g:AbsolutePanel>
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
			</g:at>
			<g:at left="520" top="100">
				<g:HTMLPanel>
					<table>
						<tbody class="{style.content2}">
							<tr height="5px">
								<td />
							</tr>
							<tr>
								<td>
									<g:AbsolutePanel height="35px" width="190px">
										<g:at left="20" top="0">
											<g:Anchor styleName="{global.buttonCss.button}"
												horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonOK">确&nbsp;定</g:Anchor>
										</g:at>
										<g:at left="100" top="0">
											<g:Anchor styleName="{global.buttonCss.button}"
												horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonCancel">取&nbsp;消</g:Anchor>
										</g:at>
									</g:AbsolutePanel>
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
			</g:at>
		</g:AbsolutePanel>
	</g:VerticalPanel>

</ui:UiBinder> 
