<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

	<ui:style>
		.title {
			font-size: 110%;
			font-weight: bold;
			color: darkblue;
			border-bottom: 1px solid #AAAAAA;
		}
		
		.border {
			border-bottom: 1px solid #AAAAAA;
			border-top: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
		}
		
		.background {
			backgroupd-color: #DDDDDD;
			border-bottom: 2px solid #AAAAAA;
			border-top: 2px solid #AAAAAA;
			border-left: 2px solid #AAAAAA;
			border-right: 2px solid #AAAAAA;
		}
		
		.content0 {
			font-size: 100%;
			border-bottom: 1px dashed #AAAAAA;
		}
		
		.content1 {
			font-size: 100%;
		}
		
		.content2 {
			font-size: 100%;
			border-top: 1px dotted #AAAAAA;
		}
	</ui:style>

	<ui:with field="global"
		type="com.eucalyptus.webui.client.view.GlobalResources" />

	<g:VerticalPanel horizontalAlignment="ALIGN_LEFT"
		styleName="{style.background}"
		verticalAlignment="ALIGN_TOP">
		<g:HTMLPanel width="800px">
			<table>
				<colgroup width="30px" />
				<colgroup width="740px" />
				<colgroup width="30px" />
				<tbody>
					<tr height="10px" />
					<tr>
						<td />
						<td>
							<g:HTMLPanel>
								<table>
									<colgroup width="20px" />
									<colgroup width="700px" />
									<colgroup width="20px" />
									<tbody class="{style.title}">
										<tr>
											<td />
											<td>添加设备：</td>
											<td />
										</tr>
										<tr height="5px">
											<td />
											<td />
											<td />
										</tr>
									</tbody>
								</table>
							</g:HTMLPanel>
						</td>
						<td />
					</tr>
					<tr height="10px" />
				</tbody>
			</table>
		</g:HTMLPanel>
		<g:AbsolutePanel height="140px" width="800px">
			<g:at left="35" top="0">
				<g:HTMLPanel>
					<table>
						<tbody class="{style.content0}">
							<tr>
								<td>
									<g:AbsolutePanel height="26px" width="600px">
										<g:at left="10" top="1">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">服务器</g:Anchor>
										</g:at>
										<g:at left="70" top="0">
											<g:ListBox visibleItemCount="1" width="100px"
												height="20px" selectedIndex="0" ui:field="serverMarkList" />
										</g:at>
										<g:at left="200" top="1">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">名称</g:Anchor>
										</g:at>
										<g:at left="242" top="0">
											<g:ListBox visibleItemCount="1" width="100px"
												height="20px" selectedIndex="0" ui:field="serverNameList" />
										</g:at>
									</g:AbsolutePanel>
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
			</g:at>
			<g:at left="35" top="35">
				<g:HTMLPanel>
					<table>
						<tbody class="{style.content1}">
							<tr>
								<td>
									<g:AbsolutePanel height="70px" width="700px">
										<g:at left="10" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">名称</g:Anchor>
										</g:at>
										<g:at left="0" top="20">
											<g:TextBox ui:field="cpuNameText" maxLength="40" width="99px" />
										</g:at>
										<g:at left="2" top="45">
											<g:ListBox visibleItemCount="1" width="100px"
												height="20px" selectedIndex="-1" ui:field="cpuNameList" />
										</g:at>
										<g:at left="130" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">厂家</g:Anchor>
										</g:at>
										<g:at left="120" top="20">
											<g:TextBox ui:field="cpuVendorText" maxLength="40" width="99px" />
										</g:at>
										<g:at left="122" top="45">
											<g:ListBox visibleItemCount="1" width="100px"
												height="20px" selectedIndex="-1" ui:field="cpuVendorList" />
										</g:at>
										<g:at left="250" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">型号</g:Anchor>
										</g:at>
										<g:at left="240" top="20">
											<g:TextBox ui:field="cpuModelText" maxLength="40" width="99px" />
										</g:at>
										<g:at left="242" top="45">
											<g:ListBox visibleItemCount="1" width="100px"
												height="20px" selectedIndex="-1" ui:field="cpuModelList" />
										</g:at>
										<g:at left="370" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">主频(GHz)</g:Anchor>
										</g:at>
										<g:at left="360" top="20">
											<g:DoubleBox ui:field="cpuGHzText" width="99px" text="0.0" />
										</g:at>
										<g:at left="490" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">缓存(MB)</g:Anchor>
										</g:at>
										<g:at left="480" top="20">
											<g:DoubleBox ui:field="cpuCacheText" width="99px" text="0.0" />
										</g:at>
										<g:at left="610" top="0">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">数量(台)</g:Anchor>
										</g:at>
										<g:at left="615" top="22">
											<g:ListBox ui:field="cpuNumList" width="50px" />
										</g:at>
										<g:at left="600" top="22">
											<g:Label text="x" />
										</g:at>
									</g:AbsolutePanel>
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
			</g:at>
			<g:at left="560" top="90">
				<g:HTMLPanel>
					<table>
						<tbody class="{style.content2}">
						<tr height="5px"><td/></tr>
							<tr>
								<td>
									<g:AbsolutePanel height="35px" width="190px">
										<g:at left="20" top="0">
											<g:Anchor styleName="{global.buttonCss.button}"
												horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonOK">确&nbsp;定</g:Anchor>
										</g:at>
										<g:at left="100" top="0">
											<g:Anchor styleName="{global.buttonCss.button}"
												horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonCancel">取&nbsp;消</g:Anchor>
										</g:at>
									</g:AbsolutePanel>
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
			</g:at>
		</g:AbsolutePanel>
	</g:VerticalPanel>

</ui:UiBinder> 
