<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:euca="urn:import:com.eucalyptus.webui.client.view">

	<ui:style>
		.toolbar {
			width: 99%;
		}
		
		.top {
			font-size: 120%;
		}
		
		.topContent {
			color: #245789;
			font-size: 95%;
			border-top: 1px solid #AAAAAA;
			border-bottom: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
			margin-left: auto;
			margin-right: auto;
		}
		
		.topLinks {
			cursor: pointer;
			cursor: hand;
		}
		
		.bottom {
			font-size: 80%;
			border-top: 1px solid #AAAAAA;
		}
		
		.bottomContent {
			font-size: 90%;
		}
	</ui:style>
	
	<ui:with field="global"
		type="com.eucalyptus.webui.client.view.GlobalResources" />

			<g:VerticalPanel width="1000" height="300"
				horizontalAlignment="ALIGN_LEFT">
				<g:AbsolutePanel width="1000px" height="40px">
					<g:at left="30" top="10">
						<g:HTMLPanel>
							<table>
								<tr class="{style.top}">
									<td>服务器总资源</td>
								</tr>
							</table>
						</g:HTMLPanel>
					</g:at>
				</g:AbsolutePanel>
				<g:Cell>
					<g:HorizontalPanel>
						<g:Cell width="40px">
							<g:AbsolutePanel />
						</g:Cell>
						<g:HTMLPanel>
							<table width="800px">
								<colgroup width="3%" />
								<colgroup width="27%" />
								<colgroup width="20%" />
								<colgroup width="3%" />
								<colgroup width="27%" />
								<colgroup width="20%" />
								<tbody class="{style.topContent}">
									<tr>
										<td>&nbsp;</td>
										<td>
											<div height="10px">&nbsp;</div>
											<div>
												<g:Anchor styleName="{style.topLinks}" ui:field="labelAll">全部服务器数量：000 台</g:Anchor>
											</div>
											<div height="10px">&nbsp;</div>
											<div>
												<g:Anchor styleName="{style.topLinks}" ui:field="labelStop">停止中服务器数量：000 台</g:Anchor>
											</div>
											<div height="10px">&nbsp;</div>
										</td>
										<td>&nbsp;</td>
										<td>&nbsp;</td>
										<td>
											<div height="10px">&nbsp;</div>
											<div>
												<g:Anchor styleName="{style.topLinks}" ui:field="labelInuse">使用中服务器数量：000 台</g:Anchor>
											</div>
											<div height="10px">&nbsp;</div>
											<div>
												<g:Anchor styleName="{style.topLinks}" ui:field="labelError">故障中服务器数量：000 台</g:Anchor>
											</div>
											<div height="10px">&nbsp;</div>
										</td>
										<td>&nbsp;</td>
									</tr>
								</tbody>
							</table>
						</g:HTMLPanel>
					</g:HorizontalPanel>
				</g:Cell>
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:AbsolutePanel width="1000px" height="56px">
						<g:at left="30" top="10">
							<g:HTMLPanel height="40px">
								<table class="{style.bottom}">
									<tbody>
										<tr style="border-top:1px solid #AAAAAA;" height="4px">
											<td width="10px"/>
											<td />
											<td />
											<td />
											<td />
											<td />
											<td />
											<td />
											<td width="100px"/>
										</tr>
										<tr>
											<td>&nbsp;</td>
											<td>
												<g:Anchor styleName="{global.buttonCss.button}"
													horizontalAlignment="ALIGN_CENTER" width="64px" ui:field="buttonAdd">
													产品体验
												</g:Anchor>
											</td>
											<td>
												<g:Anchor styleName="{global.buttonCss.button}"
													horizontalAlignment="ALIGN_CENTER" width="64px" ui:field="buttonSecretKey">
													密钥管理
												</g:Anchor>
											</td>
											<td>
												<g:Anchor styleName="{global.buttonCss.button}"
													horizontalAlignment="ALIGN_CENTER" width="64px" ui:field="buttonPower">
													开机/关机
												</g:Anchor>
											</td>
											<td>
												<g:Anchor styleName="{global.buttonCss.button}"
													horizontalAlignment="ALIGN_CENTER" width="72px"  ui:field="buttonConnect">
													连接服务器
												</g:Anchor>
											</td>
											<td>
												<g:Anchor styleName="{global.buttonCss.button}"
													horizontalAlignment="ALIGN_CENTER" width="64px"  ui:field="buttonExtend">
													延续服务
												</g:Anchor>
											</td>
											<td>
												<g:Anchor styleName="{global.buttonCss.button}"
													horizontalAlignment="ALIGN_CENTER" width="64px" ui:field="buttonModify">
													变&nbsp;&nbsp;更
												</g:Anchor>
											</td>
											<td>
												<g:Anchor styleName="{global.buttonCss.button}"
													horizontalAlignment="ALIGN_CENTER" width="64px" ui:field="buttonDelete">
													删&nbsp;&nbsp;除
												</g:Anchor>
											</td>
											<td />
										</tr>
									</tbody>
								</table>
							</g:HTMLPanel>
						</g:at>
					</g:AbsolutePanel>
				</g:Cell>
				<g:LayoutPanel width="1000px" height="420px" ui:field="resultPanel" styleName="{style.bottomContent}"/>
			</g:VerticalPanel>

</ui:UiBinder> 