<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

	<ui:style>
		.title {
			font-size: 110%;
			font-weight: bold;
			color: darkblue;
			border-bottom: 1px solid #AAAAAA;
		}
		
		.border {
			border-bottom: 1px solid #AAAAAA;
			border-top: 1px solid #AAAAAA;
			border-left: 1px solid #AAAAAA;
			border-right: 1px solid #AAAAAA;
		}
		
		.background {
			backgroupd-color: #DDDDDD;
			border-bottom: 2px solid #AAAAAA;
			border-top: 2px solid #AAAAAA;
			border-left: 2px solid #AAAAAA;
			border-right: 2px solid #AAAAAA;
		}
		
		.content {
			font-size: 90%;
			border-top: 1px solid #AAAAAA;
		}
	</ui:style>

	<ui:with field="global"
		type="com.eucalyptus.webui.client.view.GlobalResources" />

	<g:VerticalPanel horizontalAlignment="ALIGN_LEFT"
		width="610px" height="260px" styleName="{style.background}"
		verticalAlignment="ALIGN_TOP">
		<g:HTMLPanel width="610px">
			<table>
				<colgroup width="30px" />
				<colgroup width="550px" />
				<colgroup width="30px" />
				<tbody>
					<tr height="10px" />
					<tr>
						<td />
						<td>
							<g:HTMLPanel>
								<table>
									<colgroup width="20px" />
									<colgroup width="510px" />
									<colgroup width="20px" />
									<tbody class="{style.title}">
										<tr>
											<td />
											<td>添加服务：</td>
											<td />
										</tr>
										<tr height="5px">
											<td />
											<td />
											<td />
										</tr>
									</tbody>
								</table>
							</g:HTMLPanel>
						</td>
						<td />
					</tr>
					<tr height="10px" />
				</tbody>
			</table>
		</g:HTMLPanel>
		<g:AbsolutePanel height="275px" width="610px">
			<g:at left="40" top="0">
				<g:Label text="开始时间" width="240px" height="16px"
					horizontalAlignment="ALIGN_CENTER" />
			</g:at>
			<g:at left="330" top="0">
				<g:Label text="结束时间" width="240px" height="16px"
					horizontalAlignment="ALIGN_CENTER" />
			</g:at>
			<g:at left="40" top="20">
				<p1:DatePicker width="240px" height="160px"
					ui:field="datePickerStarttime" />
			</g:at>
			<g:at left="330" top="20">
				<p1:DatePicker width="240px" height="160px"
					ui:field="datePickerEndtime" />
			</g:at>
			<g:at left="40" top="185">
				<g:ListBox visibleItemCount="1" width="60px" height="20px"
					selectedIndex="0" ui:field="yearListStarttime" />
			</g:at>
			<g:at left="110" top="185">
				<g:ListBox visibleItemCount="1" width="50px" height="20px"
					selectedIndex="0" ui:field="monthListStarttime" />
			</g:at>
			<g:at left="170" top="185">
				<g:ListBox visibleItemCount="1" width="50px" height="20px"
					selectedIndex="0" ui:field="dayListStarttime" />
			</g:at>
			<g:at left="330" top="185">
				<g:ListBox width="60px" height="20px" selectedIndex="0"
					visibleItemCount="1" ui:field="yearListEndtime" />
			</g:at>
			<g:at left="400" top="185">
				<g:ListBox width="50px" height="20px" selectedIndex="0"
					visibleItemCount="1" ui:field="monthListEndtime" />
			</g:at>
			<g:at left="460" top="185">
				<g:ListBox width="50px" height="20px" selectedIndex="0"
					visibleItemCount="1" ui:field="dayListEndtime" />
			</g:at>
			<g:at left="40" top="210">
				<g:HTMLPanel>
					<table>
						<tbody class="{style.content}">
							<tr>
								<td>
									<g:AbsolutePanel height="60px" width="530px">
										<g:at left="15" top="5">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="60px">账&nbsp;户</g:Anchor>
										</g:at>
										<g:at left="10" top="25">
											<g:ListBox visibleItemCount="1" width="100px"
												height="20px" selectedIndex="0" ui:field="accountList" />
										</g:at>
										<g:at left="125" top="5">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="60px">用&nbsp;户</g:Anchor>
										</g:at>
										<g:at left="120" top="25">
											<g:ListBox visibleItemCount="1" width="100px"
												height="20px" selectedIndex="0" ui:field="userList" />
										</g:at>
										<g:at left="235" top="5">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">虚拟机</g:Anchor>
										</g:at>
										<g:at left="230" top="25">
											<g:ListBox visibleItemCount="1" width="80px"
												height="20px" selectedIndex="0" ui:field="vmList" />
										</g:at>
										<g:at left="325" top="5">
											<g:Anchor horizontalAlignment="ALIGN_LEFT" width="80px">服务状态</g:Anchor>
										</g:at>
										<g:at left="320" top="25">
											<g:ListBox visibleItemCount="1" width="80px"
												height="20px" selectedIndex="0" ui:field="stateList" />
										</g:at>
									</g:AbsolutePanel>
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
			</g:at>
			<g:at left="450" top="233" style="font-size:90%;">
				<g:Anchor styleName="{global.buttonCss.button}"
					horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonOK">确&nbsp;定
				</g:Anchor>
			</g:at>
			<g:at left="530" top="233" style="font-size:90%;">
				<g:Anchor styleName="{global.buttonCss.button}"
					horizontalAlignment="ALIGN_CENTER" width="60px" ui:field="buttonCancel">取&nbsp;消
				</g:Anchor>
			</g:at>
		</g:AbsolutePanel>
	</g:VerticalPanel>

</ui:UiBinder> 
